<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment"
    android:background="#FF1071C6">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:layout_gravity="left|top"
        android:background="#FF1071C6"
        android:weightSum="1"
        android:layout_marginTop="20dp">

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/dado1"
            android:layout_weight="0.07"
            android:background="@drawable/dado1"/>

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/dado2"
            android:layout_weight="0.07"
            android:background="@drawable/dado2"/>

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/dado3"
            android:layout_weight="0.07"
            android:background="@drawable/dado3"/>

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/dado4"
            android:background="@drawable/dado4_6"
            android:layout_weight="0.02" />

        <ImageButton
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:id="@+id/dado5"
            android:layout_weight="0.07"
            android:background="@drawable/dado5_6"/>

    </TableRow>

    <TableRow
        android:layout_width="400dp"
        android:layout_height="352dp"
        android:layout_gravity="left|bottom|center_horizontal"
        android:background="#1071c6"
        android:weightSum="1">

        <ImageButton
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:id="@+id/dodecaedro"
            android:background="@drawable/dode4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="131dp"
            android:layout_height="111dp"
            android:layout_marginLeft="20dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/suma"
                android:background="@drawable/suma"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/resta"
                android:layout_marginLeft="10dp"
                android:background="@drawable/resta"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="157dp"
            android:layout_height="match_parent"
            android:background="#FF1071C6"
            android:weightSum="1">

            <TextView
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/numero1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="[]"
                android:id="@+id/textView4"
                android:layout_weight="0.29" />

            <TextView
                android:layout_width="19dp"
                android:layout_height="47dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/numero2"
                android:layout_weight="0.17" />

            <TextView
                android:layout_width="41dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/result"
                android:layout_gravity="bottom"
                android:layout_marginBottom="120dp" />

        </LinearLayout>

    </TableRow>

</FrameLayout>

